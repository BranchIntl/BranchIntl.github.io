---
layout: branch-default
---
<div class="branch-blog-post">
  <!-- Header -->
  <div class="branch-post-header">
    <div class="branch-post-header-content">
      <div class="header-logo">
        <a href="{{ site.baseurl }}/">
          <svg width="120" height="45" viewBox="0 0 120 45" fill="none" xmlns="http://www.w3.org/2000/svg">
            <text x="0" y="32" font-family="sans-serif" font-size="28" font-weight="600" fill="#19355E">branch</text>
          </svg>
        </a>
      </div>
      <div class="header-nav">
        <a href="#login">Login</a>
        <a href="#faq">FAQ</a>
        <a href="#partner">Partner with us</a>
      </div>
    </div>
  </div>

  <!-- Post Content -->
  <article class="branch-post-article">
    <div class="branch-post-container">
      <!-- Meta info -->
      <div class="post-meta-header">
        <div class="post-category-tag">
          {% if page.tags and page.tags.size > 0 %}
            <a href="{{ site.baseurl }}/tags#{{ page.tags[0] | cgi_escape }}">{{ page.tags[0] }}</a>
          {% elsif page.categories and page.categories.size > 0 %}
            <a href="{{ site.baseurl }}/categories#{{ page.categories[0] | cgi_escape }}">{{ page.categories[0] }}</a>
          {% else %}
            Finance
          {% endif %}
        </div>
        <div class="post-read-time">5 min read</div>
      </div>

      <!-- Title -->
      <h1 class="post-main-title">{{ page.title }}</h1>

      <!-- Author and Date -->
      <p class="post-author-date">
        {{ page.date | date: "%b %d, %Y" }}
        {% if page.author %}
         | by {{ page.author }}
        {% endif %}
      </p>

      <!-- Featured Image -->
      {% if page.feature-img %}
      <div class="post-featured-image">
        <img src="{{ page.feature-img | relative_url }}" alt="{{ page.title }}">
      </div>
      {% elsif page.thumbnail %}
      <div class="post-featured-image">
        <img src="{{ page.thumbnail | relative_url }}" alt="{{ page.title }}">
      </div>
      {% endif %}

      <!-- Post Body -->
      <div class="post-body-content">
        {{ content }}
      </div>

      <!-- Tags and Categories -->
      <div class="post-tags-categories">
        {% if page.categories and page.categories.size > 0 %}
        <div class="post-taxonomy-section">
          <h4>Categories:</h4>
          <div class="taxonomy-items">
            {% for category in page.categories %}
            <a href="{{ site.baseurl }}/categories#{{ category | cgi_escape }}" class="taxonomy-tag">{{ category }}</a>
            {% endfor %}
          </div>
        </div>
        {% endif %}

        {% if page.tags and page.tags.size > 0 %}
        <div class="post-taxonomy-section">
          <h4>Tags:</h4>
          <div class="taxonomy-items">
            {% for tag in page.tags %}
            <a href="{{ site.baseurl }}/tags#{{ tag | cgi_escape }}" class="taxonomy-tag">{{ tag }}</a>
            {% endfor %}
          </div>
        </div>
        {% endif %}
      </div>

      <!-- Social Share Buttons -->
      <div class="branch-social-share">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ page.url | absolute_url }}" target="_blank" class="share-btn share-facebook">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Facebook
        </a>
        <a href="https://twitter.com/intent/tweet?url={{ page.url | absolute_url }}&text={{ page.title }}" target="_blank" class="share-btn share-twitter">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
          Twitter
        </a>
        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | absolute_url }}" target="_blank" class="share-btn share-linkedin">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
        <a href="https://t.me/share/url?url={{ page.url | absolute_url }}&text={{ page.title }}" target="_blank" class="share-btn share-telegram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
          </svg>
          Telegram
        </a>
        <a href="https://reddit.com/submit?url={{ page.url | absolute_url }}&title={{ page.title }}" target="_blank" class="share-btn share-reddit">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
          </svg>
          Reddit
        </a>
        <button class="share-btn share-more" onclick="if(navigator.share){navigator.share({title:'{{ page.title }}',url:'{{ page.url | absolute_url }}'})}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"/>
          </svg>
          More
        </button>
      </div>

      <!-- Comments Section -->
      {% if site.data.comments.cusdis.app_id %}
      <div class="branch-comments-section">
        <h2 class="comments-title">Comments</h2>
        {% include social/cusdis.liquid %}
      </div>
      {% endif %}

      <!-- More to Read Section -->
      <div class="branch-more-to-read">
        <h2 class="more-to-read-title">More to read</h2>
        <div class="more-to-read-grid">
          {% assign related_posts = site.posts | where_exp: "post", "post.url != page.url" | limit: 3 %}
          {% for post in related_posts %}
          <div class="branch-post-card">
            {% if post.thumbnail %}
            <img src="{{ post.thumbnail | relative_url }}" alt="{{ post.title }}" class="post-image">
            {% elsif post.feature-img %}
            <img src="{{ post.feature-img | relative_url }}" alt="{{ post.title }}" class="post-image">
            {% else %}
            <img src="{{ site.avatar | relative_url }}" alt="{{ post.title }}" class="post-image">
            {% endif %}

            <div class="post-meta">
              <div class="post-category">
                {% if post.tags and post.tags.size > 0 %}
                  {{ post.tags[0] }}
                {% else %}
                  Finance
                {% endif %}
              </div>
              <div class="post-read-time">5 min read</div>
            </div>

            <h2 class="post-title">
              <a href="{{ post.url | relative_url }}">{{ post.title }}</a>
            </h2>

            <p class="post-info">
              {{ post.date | date: "%b %d, %Y" }}
              {% if post.author %}
               | by {{ post.author }}
              {% endif %}
            </p>

            <p class="post-excerpt">
              {% if post.excerpt %}
                {{ post.excerpt | strip_html | truncate: 180 }}
              {% else %}
                {{ post.content | strip_html | truncate: 180 }}
              {% endif %}
            </p>

            <a href="{{ post.url | relative_url }}" class="post-read-more">Read More</a>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </article>

  <!-- Branch Footer -->
  <footer class="branch-footer">
    <div class="branch-footer-content">
      <div class="footer-section">
        <h3>Curious about Branch?</h3>
        <ul>
          <li><a href="/about">About</a></li>
          <li><a href="/how-it-works">How it works</a></li>
          <li><a href="/news">In the news</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Legal</h3>
        <ul>
          <li><a href="/policies">Policies and Cookie</a></li>
          <li><a href="/concerns">Concerns Information</a></li>
          <li><a href="/customer-awareness">Customer Awareness</a></li>
          <li><a href="/grievance">Gi-Sunce Redressal</a></li>
          <li><a href="/partners">Our Partners</a></li>
          <li><a href="/collections">Collections Partners</a></li>
          <li><a href="/regulatory">Understanding Regulatory Digital Lending Operations</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Download</h3>
        <div class="download-icon">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
            <rect width="40" height="40" rx="8" fill="#fff"/>
            <path d="M20 10v20m-8-8l8 8 8-8" stroke="#19355E" stroke-width="2"/>
          </svg>
        </div>
      </div>

      <div class="footer-section">
        <h3>Contact Information</h3>
        <p>Branch International Financial Services Pvt Ltd.<br>
        JC AWFIS, Baner Solutions, 4th floor,<br>
        Survey No.115/1, Aundh - Baner Link Road, Baner,<br>
        Chamber Road,<br>
        Mumbai, Maharashtra 400057</p>
        <p>+91 8655597825</p>
      </div>
    </div>

    <div class="footer-bottom">
      <h4>Useful Links</h4>
      <div class="footer-links">
        <a href="/sachet-portal">Sachet Portal</a>
        <a href="/rbi-complaint">RBI Complaint</a>
      </div>
    </div>
  </footer>
</div>
