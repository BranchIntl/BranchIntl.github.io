---
layout: branch-default
---
<div class="branch-blog-home">
  <!-- Hero Section with Branch Header -->
  <div class="branch-hero">
    <!-- Decorative background circles -->
    <div class="hero-bg-circle hero-bg-circle-left"></div>
    <div class="hero-bg-circle hero-bg-circle-right"></div>

    <div class="branch-header">
      <div class="header-logo">
        <a href="{{ site.baseurl }}/">
          <svg width="120" height="45" viewBox="0 0 120 45" fill="none" xmlns="http://www.w3.org/2000/svg">
            <text x="0" y="32" font-family="sans-serif" font-size="28" font-weight="600" fill="#19355E">branch</text>
          </svg>
        </a>
      </div>
      <div class="header-nav">
        <a href="#login">Login</a>
        <a href="#faq">FAQ</a>
        <a href="#partner">Partner with us</a>
      </div>
    </div>

    <h1 class="hero-title">Tags</h1>
    <p class="hero-subtitle">Browse posts by tag</p>
  </div>

  <!-- Tags Section -->
  <div class="branch-categories-section">
    <!-- Collect all tags -->
    {% assign rawtags = "" %}
    {% for post in site.posts %}
      {% if post.tags.size > 0 %}
        {% assign post_tags = post.tags | join:'|' | append:'|' %}
        {% assign rawtags = rawtags | append:post_tags %}
      {% endif %}
    {% endfor %}
    {% assign rawtags = rawtags | split:'|' | sort %}

    {% assign tags = "" | split: "" %}
    {% for tag in rawtags %}
      {% if tag != "" %}
        {% unless tags contains tag %}
          {% assign tags = tags | push: tag %}
        {% endunless %}
      {% endif %}
    {% endfor %}

    <!-- Tag Navigation -->
    <div class="category-nav">
      {% for tag in tags %}
        {% assign tag_posts = site.posts | where_exp: "post", "post.tags contains tag" %}
        <a href="#{{ tag | cgi_escape }}" class="category-nav-link">
          {{ tag }} <span class="count">({{ tag_posts | size }})</span>
        </a>
      {% endfor %}
    </div>

    <!-- Tag Groups -->
    <div class="branch-category-groups">
      {% for tag in tags %}
        {% assign tag_posts = site.posts | where_exp: "post", "post.tags contains tag" %}
        <div class="category-group" id="{{ tag | cgi_escape }}">
          <h2 class="category-group-title">{{ tag }}</h2>

          <div class="branch-posts-grid">
            {% for post in tag_posts %}
            <div class="branch-post-card">
              {% if post.thumbnail %}
              <img src="{{ post.thumbnail | relative_url }}" alt="{{ post.title }}" class="post-image">
              {% elsif post.feature-img %}
              <img src="{{ post.feature-img | relative_url }}" alt="{{ post.title }}" class="post-image">
              {% else %}
              <img src="{{ site.avatar | relative_url }}" alt="{{ post.title }}" class="post-image">
              {% endif %}

              <div class="post-meta-inline">
                <div class="post-category-inline">
                  <a href="{{ site.baseurl }}/tags#{{ tag | cgi_escape }}">{{ tag }}</a>
                </div>
                <div class="post-read-time">5 min read</div>
              </div>

              <h2 class="post-title">
                <a href="{{ post.url | relative_url }}">{{ post.title }}</a>
              </h2>

              <p class="post-info">
                {{ post.date | date: "%b %d, %Y" }}
                {% if post.author %}
                 | by {{ post.author }}
                {% endif %}
              </p>

              <p class="post-excerpt">
                {% if post.excerpt %}
                  {{ post.excerpt | strip_html | truncate: 180 }}
                {% else %}
                  {{ post.content | strip_html | truncate: 180 }}
                {% endif %}
              </p>

              <a href="{{ post.url | relative_url }}" class="post-read-more">Read More</a>
            </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Branch Footer -->
  <footer class="branch-footer">
    <div class="branch-footer-content">
      <div class="footer-section">
        <h3>Curious about Branch?</h3>
